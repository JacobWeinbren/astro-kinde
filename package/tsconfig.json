{
    "compilerOptions": {
        "target": "ESNext",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "moduleResolution": "Node16",
        "module": "Node16",
        "allowImportingTsExtensions": true,
        "noEmit": true,
        "typeRoots": ["./node_modules/@types"],
        "types": ["node"]
    },
    "include": ["src/**/*.ts"],
    "exclude": ["dist"]
}
